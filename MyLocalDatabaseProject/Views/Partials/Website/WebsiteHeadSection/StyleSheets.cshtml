    "/css/" + Model.ThemeFolder + "/modules/misc/misc_scroll-prompt-large.css",
    "/css/" + Model.ThemeFolder + "/modules/misc/misc_directions-large.css",
    "/css/" + Model.ThemeFolder + "/modules/shop/all_shop-large.css",
    "/css/" + Model.ThemeFolder + "/modules/shop/shop_snipcart-large.css",
    "/css/" + Model.ThemeFolder + "/modules/shop/shop_ecwid-large.css");

    SmidgeHelper
    .CreateCssBundle("sitebuilder-css-prnt-bundle")
    .RequiresCss("/css/" + Model.ThemeFolder + "/print.css");

    SmidgeHelper
    .CreateCssBundle("custom-css-bundle")
    .RequiresCss("/css/dist/styles.css");
}

<environment names="Development">

@if (Model.TextDirection == "rtl")
{
    <link rel="stylesheet" href="sitebuilder-rtl-css-bundle" media="screen" debug="true"/>
    <link rel="stylesheet" href="sitebuilder-css-rtl-small-bundle" media="@smallMedia" debug="true"/>
    <link rel="stylesheet" href="sitebuilder-css-rtl-large-bundle" media="@largeMedia" debug="true"/>
}
else
{
    <link rel="stylesheet" href="sitebuilder-ltr-css-bundle" media="screen" debug="true"/>
}
<link rel="stylesheet" href="sitebuilder-css-bundle" media="screen" debug="true"/>
<link rel="stylesheet" href="/uSkinned/css/generated/@(style.Key).css?version=@(style.UpdateDate.Ticks)" media="screen" />
<link rel="stylesheet" href="sitebuilder-css-small-bundle" media="@smallMedia" debug="true"/>
<link rel="stylesheet" href="sitebuilder-css-large-bundle" media="@largeMedia" debug="true"/>
<link rel="stylesheet" href="sitebuilder-css-prnt-bundle" media="print" debug="true"/>
<link rel="stylesheet" href="custom-css-bundle" debug="true"/>
@if (UmbracoContext.InPreviewMode)
{
    <link rel="stylesheet" href="sitebuilder-css-preview-bundle" media="screen" debug="true"/>
}

</environment>

<environment names="Staging,Production">

@if (Model.TextDirection == "rtl")
{
    <link rel="stylesheet" href="sitebuilder-rtl-css-bundle" media="screen" />
    <link rel="stylesheet" href="sitebuilder-css-rtl-small-bundle" media="@smallMedia" />
    <link rel="stylesheet" href="sitebuilder-css-rtl-large-bundle" media="@largeMedia" />
}
else
{
    <link rel="stylesheet" href="sitebuilder-ltr-css-bundle" media="screen" />
}
<link rel="stylesheet" href="sitebuilder-css-bundle" media="screen" />
<link rel="stylesheet" href="/uSkinned/css/generated/@(style.Key).css?version=@(style.UpdateDate.Ticks)" media="screen" />
<link rel="stylesheet" href="sitebuilder-css-small-bundle" media="@smallMedia" />
<link rel="stylesheet" href="sitebuilder-css-large-bundle" media="@largeMedia" />
<link rel="stylesheet" href="sitebuilder-css-prnt-bundle" media="print" />
@if (UmbracoContext.InPreviewMode)
{
    <link rel="stylesheet" href="sitebuilder-css-preview-bundle" media="screen" />
}

</environment>